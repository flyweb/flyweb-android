<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:id="@+id/discover_list_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:background="@drawable/discover_item_gradient"
    android:onClick="onItemSelected">

    <ImageView
        android:id="@+id/discover_list_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="5sp"
        android:src="@drawable/logo_flyweb_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="5sp">

        <TextView
            android:id="@+id/discover_list_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="5sp"/>

        <TextView
            android:id="@+id/discover_list_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
</RelativeLayout>
