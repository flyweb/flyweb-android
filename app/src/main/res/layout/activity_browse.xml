<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_browse"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ca.vijayan.flyweb.BrowseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:padding="5sp"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_weight="0"
            android:scaleType="fitCenter"
            android:layout_marginRight="5sp"
            android:background="@null"
            android:src="@drawable/hamburger_menu"
            android:onClick="onHamburgerButtonClicked" />

        <TextView
            android:id="@+id/browse_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="10pt" />

        <ImageButton
            android:padding="5sp"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_weight="0"
            android:scaleType="fitCenter"
            android:layout_marginRight="5sp"
            android:background="@null"
            android:src="@drawable/reload_icon"
            android:onClick="onReloadButtonClicked" />
    </LinearLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/browse_webview" />

</LinearLayout>
